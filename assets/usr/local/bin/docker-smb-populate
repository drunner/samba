#!/bin/bash

# run from Dockerfile:
# RUN cp -r /etc/samba /originals/etcsamba
# RUN cp -r /var/lib/samba /originals/varlibsamba

cp -a /originals/etcsamba/* /etc/samba/
cp -a /originals/varlibsamba/* /var/lib/samba/


mkdir /etc/samba/dockershareinfo
touch /etc/samba/initcomplete

cat <<EOF > /etc/samba/smb.conf
[global]
        netbios name = ${HOSTNAME}
        server string = %h server (Samba, Docker)
        server role = standalone server
        map to guest = Bad User
        guest account = PCGUEST
        syslog = 0
        log file = /var/log/samba/log.%m
        max log size = 1000
        dns proxy = No
        idmap config * : backend = tdb
        security = user
        encrypt passwords = true
        passdb backend = tdbsam
        obey pam restrictions = yes        
        unix password sync = no
        pam password change = no
        hosts allow = ALL
EOF

